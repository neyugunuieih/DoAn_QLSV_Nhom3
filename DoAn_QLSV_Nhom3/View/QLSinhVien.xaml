<Window x:Class="DoAn_QLSV_Nhom3.View.QLSinhVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn_QLSV_Nhom3.View"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="SINH VIÊN" Height="600" Width="950">

    <Grid Background="#F7F9FB" Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ SINH VIÊN" Grid.Row="0" FontSize="40" FontWeight="Bold" Foreground="DarkBlue" HorizontalAlignment="Center" 
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10,0" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Mã Sinh Viên:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="txt_MaSV" Width="350" Height="40" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Họ và Tên:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="txt_HoTen" Width="350" Height="40" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Ngày Sinh:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <DatePicker x:Name="dp_NgaySinh" Width="350" Height="40" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Giới tính:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <RadioButton x:Name="rb_Nam" Content="Nam" GroupName="Gender" FontSize="18" FontWeight="Bold" Margin="0,10,0,10"/>
                    <RadioButton x:Name="rb_Nu" Content="Nữ" GroupName="Gender" FontSize="18" FontWeight="Bold" Margin="20,10,0,10"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Địa chỉ:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="txt_DiaChi" Width="350" Height="40" FontSize="18"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <Label Content="Mã Lớp:" Width="150" FontSize="18" FontWeight="Bold"/>
                    <ComboBox x:Name="cb_MaLop" Width="350" Height="40" FontSize="18"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,10,0,5" HorizontalAlignment="center">
                    <Button x:Name="btn_Them" Content="Thêm" Width="100" Height="35" Background="#2196F3" Foreground="White" FontSize="18" FontWeight="Bold" Margin="5" Click="Btn_Them_Click" />
                    <Button x:Name="btn_Sua" Content="Sửa" Width="100" Height="35" Background="#FFC107" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="5" Click="Btn_Sua_Click" />
                    <Button x:Name="btn_Xoa" Content="Xoá" Width="100" Height="35" Background="#F44336" Foreground="White" FontSize="18" FontWeight="Bold" Margin="5" Click="Btn_Xoa_Click" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20,20,0,0">
                <Ellipse Width="200" Height="200" Stroke="Gray" StrokeThickness="2">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="D:\laptrinhungdung\DoAn_QLSV_Nhom3\DoAn_QLSV_Nhom3\img\logo.png"/>
                    </Ellipse.Fill>
                </Ellipse>
                <Button Content="Đổi Avatar" Width="150" Height="35" Margin="0 10" Background="#FF9800" Foreground="White" FontSize="18" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <GroupBox Grid.Row="2" Header="Danh sách sinh viên" FontWeight="Bold" FontSize="16">
            <DataGrid x:Name="DG_SinhVien" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5" SelectionChanged="DG_SinhVien_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã SV" Binding="{Binding MaSV}" Width="*"/>
                    <DataGridTextColumn Header="Họ Tên" Binding="{Binding HoTen}" Width="2*"/>
                    <DataGridTextColumn Header="Ngày Sinh" Binding="{Binding NgaySinh, StringFormat=d}" Width="*"/>
                    <DataGridTextColumn Header="Giới Tính" Binding="{Binding GioiTinh}" Width="*"/>
                    <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding DiaChi}" Width="2*"/>
                    <DataGridTextColumn Header="Mã Lớp" Binding="{Binding MaLop}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
