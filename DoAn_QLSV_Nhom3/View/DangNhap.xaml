<Window x:Class="DoAn_QLSV_Nhom3.View.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn_QLSV_Nhom3.View"
        mc:Ignorable="d"
        Title="Đăng Nhập" Height="600" Width="950">
    
    <Grid Margin="10,10,10,0" Height="550" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Image Source="D:\laptrinhungdung\DoAn_QLSV_Nhom3\DoAn_QLSV_Nhom3\img\login.png" Grid.Column="0" Stretch="Uniform" Margin="40"/>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20">
            <Label Content="XIN CHÀO" FontSize="50" FontWeight="Bold" Foreground="Black"  HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,15,0,15">
                <Label Content="Tên Đăng Nhập:" Width="150" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                <TextBox x:Name="txt_TK" Width="350" RenderTransformOrigin="0.500,0.534" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Height="40"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Label Content="Mật Khẩu:" Width="150" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                <PasswordBox x:Name="txt_MK" Width="350" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Height="40"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btn_DangNhap" Content="Đăng Nhập" Width="130" Margin="15" Height="40" FontWeight="Bold" FontSize="18" Click="Btn_DangNhap_Click"/>
                <Button x:Name="btn_Thoat" Content="Thoát" Width="130" Margin="15" Height="40" FontWeight="Bold" FontSize="18" Click="Btn_Thoat_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
