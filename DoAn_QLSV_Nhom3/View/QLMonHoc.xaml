<Window x:Class="DoAn_QLSV_Nhom3.View.QLMonHoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn_QLSV_Nhom3.View"
        mc:Ignorable="d"
        Loaded="QLMonHoc_Loaded"
        Title="QUẢN LÝ MÔN HỌC" Height="600" Width="950">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUẢN LÝ MÔN HỌC"
                   FontSize="40"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Label Content="Mã Môn:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txt_MaMon" Grid.Row="0" Grid.Column="1" Height="40" Margin="0,5" FontSize="18"/>

            <Label Content="Tên Môn:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="30,0,0,0"/>
            <TextBox x:Name="txt_TenMon" Grid.Row="0" Grid.Column="3" Height="40" Margin="0,5" FontSize="18"/>

            <Label Content="Số Tín Chỉ:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="txt_SoTinChi" Grid.Row="1" Grid.Column="1" Height="40" Margin="0,5" FontSize="18"/>

            <Label Content="Khoa:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="30,0,0,0"/>
            <ComboBox x:Name="cb_Khoa" Grid.Row="1" Grid.Column="3" Height="40" Margin="0,5" FontSize="18">
                <ComboBoxItem Content="Công nghệ thông tin"/>
                <ComboBoxItem Content="Kinh tế"/>
                <ComboBoxItem Content="Ngoại ngữ"/>
                <ComboBoxItem Content="Khác"/>
            </ComboBox>
        </Grid>

        <DataGrid x:Name="DG_MonHoc" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"  Margin="0,0,0,15" FontSize="18" FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Môn" Binding="{Binding MaMon}" Width="120"/>
                <DataGridTextColumn Header="Tên Môn" Binding="{Binding TenMon}" Width="250"/>
                <DataGridTextColumn Header="Số Tín Chỉ" Binding="{Binding SoTinChi}" Width="120"/>
                <DataGridTextColumn Header="Khoa" Binding="{Binding TenKhoa}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btn_Luu" Content="Lưu" Width="100" Height="35" Margin="5" Background="#4CAF50" Foreground="White" FontWeight="Bold" FontSize="18" Click="Btn_Luu_Click"/>
            <Button x:Name="btn_Sua" Content="Sửa" Width="100" Height="35" Margin="5" Background="#FFC107" Foreground="Black" FontWeight="Bold" FontSize="18" Click="Btn_Sua_Click"/>
            <Button x:Name="btn_Xoa" Content="Xóa" Width="100" Height="35" Margin="5" Background="#F44336" Foreground="White" FontWeight="Bold" FontSize="18" Click="Btn_Xoa_Click"/>
            <Button x:Name="btn_Thoat" Content="Thoát" Width="100" Height="35" Margin="5" FontWeight="Bold" FontSize="18" Click="Btn_Thoat_Click"/>
        </StackPanel>
    </Grid>
</Window>
